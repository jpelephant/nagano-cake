<div class="row">
  <div class="col-md-offset-2">
    <div class="col-md-4">
      <h1><p>注文履歴一覧</p></h1>
    </div>
  </div>
  <table>
    <div class="row">
      <div class="col-md-offset-2 col-md-7">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <%= @order.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime(‘%Y/%m/%d’), admins_order_path(order) %></td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%= order.billing_amount %></td>
          </tr>
          <%= end %>
        </tbody>
      </div>
    </div>
  </table>
  <div class="center">
    <%= paginate @orders %>
  </div>
</div>