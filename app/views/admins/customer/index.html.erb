<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-3">
      <h1><p>会員一覧</p></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <%= @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + customer.first_name %></td>
              <td><%= customer.email %></td>
            </tr>
          <%= end %>
        </tbody>
      </div>
    </div>
  </div>
</div>
