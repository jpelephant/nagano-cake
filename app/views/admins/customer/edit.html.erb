<div class="row">
  <div class="col-md-6">
    <h2><p><%= @customer.name %>さんの会員情報編集</p></h2>
  </div>
  <table>
    <%= from_with model:@customer, local: ture do |f| %>
    <tr>
      <th class="col-md-offset-2 col-md-2">会員ID</th>
      <td class="col-md-3"><%= f.id %></td>
    </tr>
    <tr>
      <th class="col-md-offset-2 col-md-2">氏名</th>
      <td>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </td>
    </tr>
    <tr>
      <th class="col-md-offset-2 col-md-2">フリガナ</th>
      <td>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </td>
    </tr>
    <tr>
      <th class="col-md-offset-2 col-md-2">郵便番号</th>
      <td>
        <%= f.text_field :postal_code %>
      </td>
    </tr>
    <tr>
      <th class="col-md-offset-2 col-md-2">住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th class="col-md-offset-2 col-md-2">電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th class="col-md-offset-2 col-md-2">メールアドレス</th>
      <td><%= f.text_field :emaill %></td>
    </tr>
    <div class="senter">
      <%= f.submit'変更を保存'%>
    </div>
  </table>
</div>
